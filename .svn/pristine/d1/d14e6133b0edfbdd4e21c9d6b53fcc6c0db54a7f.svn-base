-- 输入数字
function LayerTGCode:addNum(i)
    if self.editText then
        local e, s = self.editText, self.editText:getText()
        if #s < 6 then e:setText(s..i) end
    end
end

-- 删除数字
function LayerTGCode:delNum(deleteAll)
    if self.editText then
        local e, s = self.editText, self.editText:getText()
        if deleteAll then
            e:setText("")
        elseif #s > 0 then
            e:setText(string.sub(s, 1, #s-1))
        end
    end
end

